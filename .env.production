# Production Environment Variables
ASPNETCORE_ENVIRONMENT=Production

# API Configuration
API_PORT=8080

# Database Configuration
DB_HOST=your_production_db_host
DB_NAME=identityhub_production
DB_USER=identityhub_user
DB_PASSWORD=your_very_secure_production_db_password
DB_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=your_production_jwt_secret_key_minimum_256_bits_very_secure

# Email Configuration
SMTP_SERVER=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@yourdomain.com

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Monitoring
APPINSIGHTS_INSTRUMENTATIONKEY=your_production_application_insights_key

# Security
REQUIRE_HTTPS=true
REQUIRE_EMAIL_CONFIRMATION=true
ENABLE_ACCOUNT_LOCKOUT=true
MAX_FAILED_ACCESS_ATTEMPTS=3
LOCKOUT_TIME_SPAN=30
