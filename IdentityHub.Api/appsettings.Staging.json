{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST:-localhost};Database=${DB_NAME:-identityhub_staging};Username=${DB_USER:-postgres};Password=${DB_PASSWORD:-postgres};Port=${DB_PORT:-5432}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "IdentityHub-Staging",
    "Audience": "IdentityHubClient-Staging",
    "ExpiryInMinutes": 30
  },
  "AllowedHosts": "*",
  "Environment": "Staging",
  "EmailSettings": {
    "SmtpServer": "${SMTP_SERVER}",
    "SmtpPort": "${SMTP_PORT:-587}",
    "SmtpUsername": "${SMTP_USERNAME}",
    "SmtpPassword": "${SMTP_PASSWORD}",
    "FromEmail": "${FROM_EMAIL:-noreply@identityhub.com}",
    "FromName": "IdentityHub Staging"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://staging.yourdomain.com",
      "https://staging-admin.yourdomain.com"
    ]
  },
  "RateLimiting": {
    "Enabled": true,
    "RequestsPerMinute": 100
  },
  "HealthChecks": {
    "Enabled": true,
    "DatabaseTimeout": 5
  }
}
