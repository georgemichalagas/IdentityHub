{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "run-identityhub",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"IdentityHub.Api"
			],
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
            "label": "build-api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/IdentityHub.Api/IdentityHub.Api.csproj",
                "--configuration",
                "Debug"
            ],
            "problemMatcher": "$msCompile"
        }
	]
}